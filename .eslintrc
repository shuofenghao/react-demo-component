{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "globals": {
    "API": "readonly",
    "NODE_ENV": "readonly",
    "TEST_USER_ID": "readonly"
  },
  "plugins": ["@typescript-eslint", "prettier", "react", "react-hooks"],
  "rules": {
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/no-non-null-assertion": 0,
    "@typescript-eslint/no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "@typescript-eslint/no-var-requires": 0,
    "@typescript-eslint/no-empty-interface": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "import/no-unresolved": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/label-has-associated-control": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/media-has-caption": 0,
    "jsx-a11y/label-has-for": 0,
    "max-classes-per-file": 0,

    "no-bitwise": 0,
    "no-debugger": 2,
    "no-nested-ternary": 0,
    "no-param-reassign": 0,
    "no-plusplus": [
      2,
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-restricted-syntax": 0,
    "no-shadow": 0,
    "no-unused-expressions": 0,
    "prefer-destructuring": 0,
    "react/state-in-constructor": 0,
    "react/require-default-props": 0,
    "react/destructuring-assignment": [2, "always"],
    "react/display-name": 0,
    "react/jsx-curly-newline": 0,
    "import/extensions": [
      1,
      {
        "extensions": [".js", ".ts", ".tsx", "less", "svg", "png", "jpg"]
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".ts", ".tsx"]
      }
    ],
    "react/jsx-no-bind": 0,
    "react/jsx-props-no-spreading": 0,
    "react/jsx-wrap-multilines": 2,
    "react/no-array-index-key": 0,
    "react/no-danger": 0,
    "react/no-find-dom-node": 1,
    "react/prop-types": 0,
    "react/sort-comp": [
      2,
      {
        "order": ["/^contextType$/", "static-variables", "static-methods", "lifecycle", "everything-else", "render"]
      }
    ],
    "react/static-property-placement": 0,
    "react-hooks/exhaustive-deps": 1,
    "react-hooks/rules-of-hooks": 2,
    "consistent-return": 1,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/ban-ts-comment": 1,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "prettier/prettier": [
      2,
      {
        "endOfLine": "auto", // 自动修改行位标记， LF,CRLF
        "arrowParens": "always", // 保留箭头函数的括号
        "printWidth": 120,
        "semi": true, // 每条语句后面添加一个分号
        "singleQuote": true, // 使用单引号代替双引号
        "trailingComma": "all" // 尽可能的添加尾随逗号
      }
    ]
    // 以下配置不建议禁用
    // "no-undef": 0, // 关闭引用未申明的变量校验
    // "react/jsx-indent": 0, // 关闭jsx缩进验证
    // "react/jsx-one-expression-per-line": 0, // 关闭一行一个jsx表达式
  }
}
